extends layout

block content
    div(class="main-content m-2")
        div(class="row")
            div(class="col-md-12")
                h2 #{title}
            div(class="files-container col-md-12")
                    each file in files
                        div(class="file col-md-3")
                            if file.isImage
                                img(src="file/" + file._id class="copy-target" data-id=file._id)
                            else
                                span(class="iconify copy-target" data-id=file._id data-icon="clarity:file-share-2-solid" data-inline="false" data-width="300" data-height="300")